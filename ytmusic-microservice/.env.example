# YTMusic Microservice Environment Variables
PORT=8000
HOST=0.0.0.0
DEBUG=false

# Google Cloud / Firebase Configuration
# Base64 encoded service account JSON
GOOGLE_APPLICATION_CREDENTIALS=your_base64_encoded_service_account_json

# Google OAuth Credentials (for YouTube Music API)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# YTMusic OAuth Configuration
YTMUSIC_OAUTH_FILE=auth/oauth.json
OAUTH_CREDENTIALS_FILE=auth/oauth_credentials.json

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

